<%- include('partials/header') %>

<h1>All Quotes</h1>
<%- include('partials/nav.ejs') %>
<br>
<a href="/quote/new">+ Add New Quote</a> 

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Quote</th>
            <th>Author</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% quotes.forEach(function(quote) { %>
            <tr>
                <td><%= quote.quoteId %></td>
                <td><%= quote.quote %></td>
                <td><%= quote.firstName %> <%= quote.lastName %></td>
                <td><%= quote.category || 'N/A' %></td>
                <td> <br>
                    <a href="/quote/edit?quoteId=<%= quote.quoteId %>">Edit</a>
                    <a href="/quote/delete?quoteId=<%= quote.quoteId %>" 
                       onclick="return confirm('Are you sure you want to delete this quote?')">Delete</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('partials/footer') %>